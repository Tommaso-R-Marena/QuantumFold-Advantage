[flake8]
# Flake8 configuration for QuantumFold-Advantage
# Black-compatible settings

max-line-length = 100
max-complexity = 15

# Extend ignore instead of ignore to combine with defaults
extend-ignore = 
    # Black compatibility
    E203,  # whitespace before ':' - Black formats this way
    W503,  # line break before binary operator - Black preference
    # Common patterns that are acceptable
    E402,  # module level import not at top - needed for conditional imports

# Per-file ignores
per-file-ignores =
    # __init__.py files export imports, so F401 is expected
    */__init__.py:F401,F403,E402
    # Test files import fixtures that appear unused
    tests/*.py:F401,F841
    tests/conftest.py:F401,F841,E402
    # Tests can import but not use (for checking import works)
    tests/test_*.py:F401,F841
    # Property tests need special import handling  
    tests/test_property.py:E402,F401

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .pytest_cache,
    .mypy_cache,
    docs/_build,
    notebooks/.ipynb_checkpoints,

# Error codes to select (empty = all)
select = E,F,W,C90

# Show source code for errors
show-source = True

# Count number of errors
count = True

# Show statistics
statistics = True
